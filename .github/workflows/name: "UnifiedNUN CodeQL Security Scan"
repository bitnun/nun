# UnifiedNUN â€“ CodeQL Security Workflow
# This workflow scans the codebase for vulnerabilities using GitHub's CodeQL engine.
# You can customize the language matrix or add custom queries if needed.

name: "UnifiedNUN CodeQL Scan"

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  schedule:
    - cron: '34 13 * * 0'  # Weekly scan on Sundays at 13:34 UTC

jobs:
  analyze:
    name: Analyze Codebase
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write

    strategy:
      fail-fast: false
      matrix:
        language: [ 'javascript', 'typescript' ]  # Add TypeScript if used

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Initialize CodeQL
      uses: github/codeql-action/init@v1
      with:
        languages: ${{ matrix.language }}
        # Optional: add custom queries here
        # queries: ./queries, unifiednun/security-queries@main

    - name: Autobuild
      uses: github/codeql-action/autobuild@v1

    # Optional: manual build steps if Autobuild fails
    # - run: |
    #     npm install
    #     npm run build

    - name: Perform CodeQL Analysis
      uses: github/codeql-action/analyze@v1
